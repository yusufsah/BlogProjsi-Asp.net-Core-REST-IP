@using entity.conti
@model List<blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutUserYUSUF.cshtml";
}


<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Blog Posts</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var item in Model)
					{

					<div class="col-lg-4 card">
							<a href="/blogController1/BlogReadall/@item.blogID">
							<img src="@item.blogbüyükresim" class="card-img-top img-fluid" alt="">
						</a>
						<div class="card-body">
							<ul class="blog-icons my-4">
								<li>
									<a href="#">
								<i class="far fa-calendar-alt"></i> @(((DateTime)item.creatdate).ToString("dd-MMM-yyyy"))
									</a>
								</li>
								<li class="mx-2">
									<a href="#">
										<i class="far fa-comment"></i> 0
									</a>
								</li>
								<li>
									<a href="#">
										<i class="fas fa-eye"></i> @item.katagorı.katagoriName
									</a>
								</li>

							</ul>
							<h5 class="card-title">
									<a href="/blogController1/BlogReadall/@item.blogID/">@item.title</a>
							</h5>
							<p class="card-text mb-3">@item.blogcontent.Substring(0,10) </p>  <!-- burası içerik yazı kısmı   5 karakter ile sınırlandırıdı-->

								<a href="/blogController1/BlogReadall/@item.blogID/" class="btn btn-primary read-m">Devamını oku</a>


								   
						</div>
					</div>
		
					<br />

					}

					</div>



				
				</div>
				<!--//left-->
			</div>
		</div>
	-
</section>















































